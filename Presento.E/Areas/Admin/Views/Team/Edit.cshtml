@model TeamEditVM
<div class="row">

    <div class="col-md-8 col-xs-12">
        <div class="white-box">
            <form class="form-horizontal form-material" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label class="col-md-12" asp-for="Name"> Name</label>
                    <div class="col-md-12">
                        <input asp-for="Name" placeholder="Name" class="form-control form-control-line">
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="col-md-12" asp-for="Surname">Surname</label>
                    <div class="col-md-12">
                        <input asp-for="Surname" placeholder="Surname" class="form-control form-control-line">
                    </div>
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-md-12">Description</label>
                    <div class="col-md-12">
                        <input asp-for="Description" placeholder="Description" class="form-control form-control-line">
                    </div>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="col-md-12">Image</label>
                    <div class="col-md-12">
                        <input asp-for="Image" class="form-control form-control-line">
                    </div>
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label class="col-sm-12">Job</label>
                    <div class="col-sm-12">
                        <select class="form-control form-control-line" asp-for="JobId">
                            @foreach (Job item in Model.Jobs)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success" type="Submit">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
