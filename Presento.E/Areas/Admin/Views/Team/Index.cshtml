
@model List<Team>    

@{
        int count = 0;
  }
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Basic Table</h3>
            <p class="text-muted">Add class <code>.table</code></p>
            <a asp-action="Create"><button class="btn btn-success">Create</button></a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Description</th>
                            <th>Setting</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Team item in Model){
                        <tr>
                            <td>@(count++)</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <img style="width:100px" src="~/assets/img/testimonials/@item.ProfilImageName">
                            
                            <td>@item.Description</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Details" asp-controller="Team" asp-route-id="@item.Id" method="post">Detail</a>
                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Team" asp-route-id="@item.Id" method="post">Edit</a>
                                    <form asp-action="Delete" asp-controller="Team" asp-route-id="@item.Id" method="post">
                                        <button class="btn btn-danger">Delete</button>

                                    </form>
                                </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>